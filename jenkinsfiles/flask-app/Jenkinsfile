@Library('utils') _

pipeline {
  agent {
    kubernetes {
      label 'flask-app'
      defaultContainer 'jnlp'
      yamlFile 'jenkins-manifests/docker.yaml'
    }
  }
  stages {
    stage('Build docker image') {
      steps {
        container('dind') {
          sh '''
            ls .
            sleep 10
            pwd
            ls .
            cat requirements.txt
          	make docker-build
		  '''
        }
      }
    }
    stage('Test shared library') {
    	steps {
    		container('dind') {
    			notifySlack "Hello from shared library."
    		}
    	}
    }
  }
}
